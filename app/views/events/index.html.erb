<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<h2> Past Events </h2>

<% @past_events.each do |event| %>
  <div class="event">
    <%= link_to event do %>
      <h3><%= event.title %></h3>
      <p><%= event.description %></p>
    <% end %>
    <p><strong>Location:</strong> <%= event.location %></p>
    <p><strong>Date:</strong> <%= event.date.strftime("%B %d, %Y") %></p>
    <p><strong>Time:</strong> <%= event.time.strftime("%I:%M %p") %></p>
    <%= button_to attend_unattend_text(event), attend_unattend(event), method: :post %>
  </div>
<% end %>

<h2> Future Events </h2>

<% @future_events.each do |event| %>
  <div class="event">
    <%= link_to event do %>
      <h3><%= event.title %></h3>
      <p><%= event.description %></p>
    <% end %>
    <p><strong>Location:</strong> <%= event.location %></p>
    <p><strong>Date:</strong> <%= event.date.strftime("%B %d, %Y") %></p>
    <p><strong>Time:</strong> <%= event.time.strftime("%I:%M %p") %></p>
    <% if event.invite_only == false %>
      <%= button_to attend_unattend_text(event), attend_unattend(event), method: :post %>
    <% else %>
      <p>This is an invite only event</p>
      <% end %>
  </div>
<% end %>

<%= render 'form' %>
